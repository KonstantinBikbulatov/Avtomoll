@model IEnumerable<Avtomoll.ViewModel.FeedBackModel.FeedBackViewModel>

@{
    ViewData["Title"] = "Список обратной связи";
}

<h1>Список обратной связи</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                  <td>
                    @Html.DisplayFor(modelItem => item.DateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                  <td>
                    @Html.ActionLink("Прочитать сообщение", "Details", new {  id=item.MessageId  }) |
                    @Html.ActionLink("Удаление", "Delete", new {  id=item.MessageId  })
                  </td>
            </tr>
        }
    </tbody>
</table>
