@model IEnumerable<string>

@{
    string active = "";
}

<h3>Статус</h3>

<div class="list-group list-group-horizontal">
    <a class="list-group-item list-group-item-action" 
                asp-action="Index" 
                asp-controller="ServiceManager" 
                asp-route-status="">Все</a>
    @foreach (var name in Model)
    {
        active = name == ViewBag.status ? "active" : "";

                <a class="list-group-item list-group-item-action @active" 
                asp-action="Index" 
                asp-controller="ServiceManager" 
                asp-route-status="@name"
                asp-route-carService="@ViewBag.carService">@name</a>
    }
</div>
